CFLAGS=-Wall -g -I..
LDFLAGS=-L.. -lm -lmbus

all: mbus-tcp-scan mbus-tcp-request-data

%.o: %.c
	$(CC) -c $(CFLAGS) $< -o $@

mbus-tcp-scan: mbus-tcp-scan.o mbus-tcp.o
	gcc -o $@ $^ $(LDFLAGS) 
	
mbus-tcp-request-data: mbus-tcp-request-data.o mbus-tcp.o
	gcc -o $@ $^ $(LDFLAGS) 

clean:
	rm -rf mbus-tcp-request-data mbus-tcp-scan *.o *~
